# =============================================================================
# FREDONBYTES - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control!

# =============================================================================
# PRIMARY DOMAIN CONFIGURATION
# =============================================================================

# Full site URL with protocol (used for canonical URLs, sitemaps, metadata)
NEXT_PUBLIC_SITE_URL=https://fredonbytes.cz

# Primary domain only (used for domain validation and redirects)
NEXT_PUBLIC_PRIMARY_DOMAIN=fredonbytes.cz

# =============================================================================
# SECONDARY DOMAINS (Multi-Domain Support)
# =============================================================================

# Comma-separated list of secondary domains that should redirect to primary
# These domains will automatically 301 redirect to NEXT_PUBLIC_SITE_URL
NEXT_PUBLIC_SECONDARY_DOMAINS=fredonbytes.cloud,fredonbytes.com,fredonbytes.eu,fredonbytes.tech

# Domain strategy: "primary" (default) = redirect all to primary, "multi" = serve all domains
NEXT_PUBLIC_DOMAIN_STRATEGY=primary

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# Support/contact email address (used in email templates and contact forms)
NEXT_PUBLIC_SUPPORT_EMAIL=info@fredonbytes.cz

# Contact form recipient email (where contact form submissions are sent)
NEXT_PUBLIC_CONTACT_EMAIL=info@fredonbytes.cz

# =============================================================================
# SEO & VERIFICATION
# =============================================================================

# Google Search Console verification code
# Get from: https://search.google.com/search-console
NEXT_PUBLIC_GOOGLE_VERIFICATION=your-google-verification-code

# Bing Webmaster Tools verification code
# Get from: https://www.bing.com/webmasters
NEXT_PUBLIC_BING_VERIFICATION=your-bing-verification-code

# =============================================================================
# DATABASE (SUPABASE)
# =============================================================================

# Supabase project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Supabase anonymous/public key
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Supabase service role key (server-side only, DO NOT expose to client!)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# =============================================================================
# EMAIL SERVICE (SMTP via Nodemailer)
# =============================================================================

# SMTP server hostname (default: smtp.forpsi.com)
SMTP_HOST=smtp.forpsi.com

# SMTP server port (587 for STARTTLS, 465 for SSL)
SMTP_PORT=587

# Use secure connection (true for port 465, false for port 587)
SMTP_SECURE=false

# SMTP authentication username (usually your full email address)
SMTP_USER=info@fredonbytes.cz

# SMTP authentication password
SMTP_PASS=your-smtp-password

# Reject unauthorized TLS certificates (set to "false" only for testing)
SMTP_REJECT_UNAUTHORIZED=true

# =============================================================================
# ANALYTICS (OPTIONAL)
# =============================================================================

# Google Analytics Measurement ID
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# =============================================================================
# DEVELOPMENT
# =============================================================================

# Next.js environment
NODE_ENV=development

# Enable bundle analyzer (set to "true" to analyze bundle size)
# ANALYZE=false
